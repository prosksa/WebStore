@if (User.Identity.IsAuthenticated)
{
	<span>Hello, <a asp-action="Index" asp-controller="Profile">@User.Identity.Name</a></span>
	<form method="post" asp-controller="Account" asp-action="Logout" asp-antiforgery="true">
		<input type="submit" value="Выход" class="btn btn-default" />
	</form>
}
else
{
	<div class="btn-group pull-right">
		<a asp-action="Login" asp-controller="Account" class="btn btn-default">Login</a>
		<a asp-action="Register" asp-controller="Account" class="btn btn-default">Register</a>
	</div>
}
